= form_for @route_point do |f|
  - if @route_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@route_point.errors.count, "error")} prohibited this route_point from being saved:"
      %ul
        - @route_point.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :x
    = f.text_field :x
  .field
    = f.label :y
    = f.text_field :y
  .actions
    = f.submit 'Save'
